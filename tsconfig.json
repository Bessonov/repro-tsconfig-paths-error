{
	"compilerOptions": {
		"outDir": "/tmp/dist/",
		"sourceMap": false,
		"module": "commonjs",
		"target": "es6",
		"moduleResolution": "node",
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"baseUrl": "./",
		"paths": {
			"*": [
				"node_modules/*",
				"node_modules/@types/*"
			]
		}
	}
}